export SHELL='/bin/zsh'

export LANGUAGE=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_COLLATE=de_DE.UTF-8

export EDITOR=${EDITOR:-nvim}
export PAGER=${PAGER:-less}
export MANSECT=3:2:9:8:1:5:4:7:6:n
export MANPATH="$HOME/.local/share/man:$MANPATH"

export LESS='-R'
export LESSOPEN='|~/.local/bin/lessfilter %s'

export PATH="/usr/lib/ccache/bin:$HOME/.local/bin:$HOME/.local/opt/android-sdk-linux/tools:$HOME/.local/opt/android-sdk-linux/platform-tools:$HOME/.local/opt/dex2jar:$HOME/.gem/ruby/2.3.0/bin:$PATH"
export WINEARCH="win32"
export ANDROID_SDK_ROOT="$HOME/.local/opt/android-sdk-linux"
export ANDROID_HOME="$ANDROID_SDK_ROOT"
export NDK_ROOT="$HOME/.local/opt/android-ndk-r9c"
export QT_QPA_PLATFORMTHEME="gtk2"
export SSH_AUTH_SOCK="/run/user/$UID/keyring/ssh"
