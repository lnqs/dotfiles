#!/bin/sh

set -eu

echo -e "\n### Enabling desktop environment services" >&2

if [[ ! -e ~/.config/quickshell ]]; then
    git clone git@github.com:lnqs/quickshell.git ~/.config/quickshell
fi

systemctl --user enable hypridle.service
systemctl --user start hypridle.service

systemctl --user enable swaync.service
systemctl --user start swaync.service

systemctl --user enable arch-update-notifier
systemctl --user start arch-update-notifier

systemctl --user enable quickshell
systemctl --user start quickshell
